# backend/.env.example
# API Configuration
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

DATABASE_URL=postgresql://wifi_user:wifi_password@localhost:5432/wifi_analyzer

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]

# File Upload Settings
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=[".pcap", ".pcapng", ".cap"]
UPLOAD_DIRECTORY=uploads

# App Settings
APP_NAME="WiFi Packet Analyzer"
APP_VERSION="0.1.0"

# Mailgun email api service
MAILGUN_API_KEY=foo
MAILGUN_DOMAIN=your_mailgun_domain.com
MAILGUN_BASE_URL=https://api.mailgun.net/v3
MAILGUN_HTTP_SIGNING_KEY=foo
FRONTEND_URL=http://localhost:3000  # For email links if needed

# JWT Settings
SECRET_KEY=your_secret_key_here_make_it_long_and_random
SESSION_EXPIRE_HOURS=48
OTP_EXPIRE_MINUTES=10

